<body class="vh-100" style="background-image: url(../public/images/5076404.jpg);background-position:right">
@using (Html.BeginForm("LoginAction", "Home", FormMethod.Post, new { @id = "form", @autocomplete = "off" }))
{
    <div class="mt-5">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <div class="text-center mb-3">
                                        <a href="/Home/Login"><img src="~/AfluexLogo/logo.png" width="200"/></a>
                                        
                                    </div>
                                    <h4 class="text-center mb-4">Sign in your account</h4>
                          
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>LoginID <span style="color:red">*</span></strong></label>
                                            @Html.TextBoxFor(m => m.LoginID, new { @class = "form-control", @placeholder = "Login ID" , @required=true })
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Password <span style="color:red">*</span></strong></label>
                                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @required = true })
                                        </div>
                                        <div class="row d-flex justify-content-between mt-4 mb-2">
                                            <div class="mb-3">
                                                <a href="/Home/ForgetPassword">Forgot Password?</a>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            @*<a href="/Admin/AdminDashboard"  class="btn btn-primary btn-block">Sign Me In</a>*@
                                            <input type="submit" class="btn btn-primary btn-block" value="Login" />
                                        </div>
                              
                                    <div class="new-account mt-3">
                                        <p>Don't have an account? <a class="text-primary" href="/Home/Register">Sign up</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

